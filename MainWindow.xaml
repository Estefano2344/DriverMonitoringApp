<Window x:Class="DriverMonitoringApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Driver Monitoring App" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MONITOREO Panel -->
        <Border BorderBrush="Black" BorderThickness="10" Background="White" Margin="10">
            <StackPanel>
                <TextBlock Text="MONITOREO" FontSize="40" FontWeight="Bold" Foreground="Black"
                           HorizontalAlignment="Center" Margin="0,20"/>
                <Rectangle Width="350" Height="700" Fill="LightGray" Margin="10"
                           HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>
        </Border>

        <!-- Cámara y Controles -->
        <StackPanel Grid.Column="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="CameraPlaceholder" Width="300" Height="300" Background="LightGray"
                    BorderBrush="Black" BorderThickness="1" Margin="0,0,0,20"/>
            <Button x:Name="ActivateButton" Content="ACTIVAR" Background="Black" Foreground="White"
                    FontSize="24" Width="200" Height="50" Click="ActivateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
