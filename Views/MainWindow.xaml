<Window x:Class="DriverMonitoringApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Driver Monitoring App"
        Height="700"
        Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <!-- Contenido principal -->
        <Grid x:Name="MainContent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- MONITOREO Panel -->
            <Border BorderBrush="Black" BorderThickness="10" Background="White" Margin="10">
                <StackPanel>
                    <TextBlock Text="MONITOREO" 
                             FontSize="40" 
                             FontWeight="Bold" 
                             Foreground="Black"
                             HorizontalAlignment="Center" 
                             Margin="0,20"/>

                    <TextBox x:Name="MonitoringLog" 
                            Width="350" 
                            Height="500" 
                            Background="Black"
                            Foreground="Lime" 
                            FontSize="14" 
                            FontFamily="Consolas"
                            IsReadOnly="True" 
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Cámara y Controles -->
            <StackPanel Grid.Column="1" 
                        Margin="20" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Border x:Name="CameraPlaceholder" 
                        Width="500" 
                        Height="500" 
                        BorderBrush="Black"
                        BorderThickness="1" 
                        Margin="0,0,0,20">
                    <TextBlock x:Name="CameraPlaceholderText"
                             Text="Cámara no iniciada"
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                </Border>

                <ComboBox x:Name="CameraSelector" 
                         Width="200" 
                         Height="30" 
                         Margin="0,0,0,20"
                         SelectionChanged="CameraSelector_SelectionChanged"/>

                <Button x:Name="ToggleProcessingButton" 
                        Content="ENCENDER" 
                        Background="Black" 
                        Foreground="White"
                        FontSize="24" 
                        Width="200" 
                        Height="50" 
                        Click="ToggleProcessingButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Superposición de la Alerta -->
        <Grid x:Name="AlertOverlay" 
              Background="#88000000" 
              Visibility="Hidden">
            <Border x:Name="AlertBorder"
                    Background="Red" 
                    CornerRadius="20" 
                    Padding="30" 
                    MaxWidth="600"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock x:Name="AlertMessage"
                             Text="¡ALERTA!" 
                             FontSize="40" 
                             FontWeight="Bold" 
                             Foreground="White"
                             TextWrapping="Wrap"
                             TextAlignment="Center"
                             HorizontalAlignment="Center" 
                             Margin="0,20"/>

                    <Button Content="Confirmar" 
                            Width="200" 
                            Height="50" 
                            FontSize="20"
                            Background="White"
                            Foreground="Red"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Click="CloseAlertButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>